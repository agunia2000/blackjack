{% extends "profile.html.twig" %}
{% set username = username %}
{% set cash = cash %}

{% block content %}
	<link rel="stylesheet" href="/application/stylesheets/formInput.css">
	<div class="main-change">
		<h1>Change your password</h1>
		<form class="main_form" action="/account" method="POST">
			<label for="old_password">Old password:</label>
			<input class="main_form-input" name="old_password" type="password">
			<label for="new_password">New Password:</label>
			<input class="main_form-input" name="new_password" type="password">
			<label for="new_password">Confirm Password:</label>
			<input class="main_form-input" name="confirm_password" type="password">
			<input class="main_form-submit" type="submit" value="Change">
		</form>
	</div>
{% endblock %}
{% block active %}
	<script>
		const page = document.querySelector("#account");
        page.classList.add("active")
	</script>
{% endblock %}

